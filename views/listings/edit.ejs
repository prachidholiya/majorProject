<% layout("/layouts/boilerplate"); %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit your listing</h3>

    <form
      method="POST"
      action="/listings/<%= listing._id %>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-2">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          class="form-control"
          required
          value="<%= listing.title  %>"
        />
        <div class="valid-feedback">Title looks good!</div>
      </div>
      <div class="mb-2">
        <label for="description" class="form-label">Description</label>
        <textarea
          type="text"
          class="form-control"
          required
          name="listing[description]"
        >
<%= listing.description%></textarea
        >
        <div class="invalid-feedback">Add a short description...</div>
      </div>
      <div class="mb-2">
        <h6>Original listing image</h6>
        <img
          src="<%= originalImageUrl  %>"
          alt=""
          height="180px"
          width="280px"
        />
      </div>
      <div class="mb-2">
        <label for="image" class="form-label">New Image Upload</label>
        <input type="file" name="listing[image]" class="form-control" />
      </div>
      <div class="row">
        <div class="mb-2 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type=" number"
            name="listing[price]"
            class="form-control"
            required
            value="<%= listing.price  %>"
          />
          <div class="invalid-feedback">Enter the correct price!</div>
        </div>
        <div class="mb-2 col-md-8">
          <label for="location" class="form-label">Location</label>
          <input
            type=" text"
            name="listing[location]"
            class="form-control"
            required
            value="<%= listing.location  %>"
          />
          <div class="invalid-feedback">Location should be valid!</div>
        </div>
      </div>
      <div class="mb-2">
        <label for="country" class="form-label">Country</label>
        <input
          type=" text"
          name="listing[country]"
          class="form-control"
          required
          value="<%= listing.country  %>"
        />
        <div class="invalid-feedback">Country name should be valid!</div>
      </div>
      <button class="btn btn-dark edit-btn mt-2 mb-3">Edit</button>
    </form>
  </div>
</div>
